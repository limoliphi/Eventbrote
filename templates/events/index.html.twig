{% extends 'layouts/base.html.twig' %}

{% block title %} Discover all events | Evenbrote {% endblock %}

{% block body %}
    <h1>{{ events|length }} Events</h1>

    <ul>
        {% for event in events %}
            <li>
                <strong>{{ event.name }}</strong>
                in {{ event.location }}
                {{ format_price(event)|format_currency('USD') }}
            </li>

            <p>{{ event.description|u.truncate(35, '...') }}</p>

            <p>{{ event.startAt|datetime }}</p>
        {% endfor %}
    </ul>

{% endblock %}
