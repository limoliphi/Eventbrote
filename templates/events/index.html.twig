{% extends 'layouts/base.html.twig' %}

{% block title %} Discover all events | Evenbrote {% endblock %}

{% block body %}

    <h1 class="text-center h4 mt-5">{{ events|length }} Events</h1>

    <p><a href="{{ path('events_create') }}">&rarr; Add new event</a></p>

    <div class="list-group list-group-flush">
        {% for event in events %}
            <a href="{{ path('events_show', {'id': event.id}) }}" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ event.name }}</h5>
                    <p>{{ format_price(event)|format_currency('USD') }}</p>
                </div>
                <p class="mb-1">{{ event.description|u.truncate(35, '...') }}</p>
                <small class="text-muted">On {{ event.startAt|datetime }} in {{ event.location }}</small>
            </a>
        {% endfor %}
    </div>

{% endblock %}
